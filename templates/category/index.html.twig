{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table catégory : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} /  Catégorie : {{ category.name }}</h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <div>
        <a href="{{ path('category_new') }}">Ajout d'un nouveau programme</a>
    </div>

    <div>
        <a href="{{ path('app_index') }}">Retour à l'accueil</a>
    </div>
{% endblock %}