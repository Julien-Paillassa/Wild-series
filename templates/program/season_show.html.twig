{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ season.description }} -- Année de sortie {{ season.year}}</h1>
            <br>
            <h2> Episodes : </h2>
            <ul>
                {% for episode in season.episodes %}
                    <h2> Episode : {{ episode.number }} - {{ episode.title }}</h2>
                    <p> {{ episode.synopsis }}</p>
                    <a href="{{ path("program_episode_show", { programSlug: program.slug, seasonNumber : season.number, episodeSlug : episode.slug }) }}">Voir la fiche de l'épisode</a>
                    <br><br>
                {% else %}
                    <p> Pas de saison trouvée </p>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des saisons
    </a>

{% endblock %}