{% extends 'base.html.twig' %}

{% block title %} Ajoute un Programme {% endblock %}

{% block body %}
    <h1 class="mb-3"> Ajoute un Programme : </h1>
    {{ form_start(form) }}
    <div class="container text-center">
        <div class="form-group py-4">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="form-group py-4">
            {{ form_label(form.summary) }}
            {{ form_widget(form.summary) }}
            {{ form_errors(form.summary) }}
        </div>

        <div class="form-group py-4">
            {{ form_label(form.poster) }}
            {{ form_widget(form.poster) }}
        </div>

        <div class="form-group py-4">
            {{ form_label(form.category) }}
            {{ form_widget(form.category) }}
        </div>

        <div class="form-group py-4">
            {{ form_label(form.actors) }}
            {{ form_widget(form.actors) }}
        </div>

        <div>
        <input class="btn btn-primary mt-3 py-4" type='submit' value='Add program'>
        {{ form_end(form) }}
        </div>

        <a class="mt-3" href="{{ path('program_index') }}">
            Retour Ã  la liste des programmes
        </a>
    </div>
{% endblock %}